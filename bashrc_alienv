#25-10-10

checkalienv() {
    alienv list &>"tempalienvlistOutput.txt"
    local isOkToRunNinja=1  # default: false
    if grep -q "^No Modulefiles Currently Loaded" tempalienvlistOutput.txt; then
        echo "No ALICE environment loaded. You can run ninja :)"
        isOkToRunNinja=0 # isOkToRunNinja=true
    elif grep -q "^Currently Loaded Modulefiles" tempalienvlistOutput.txt; then
        echo "Some ALICE environment is loaded! In order to run ninja, run 'exit' to leave alienv!"
        isOkToRunNinja=1
    else
        echo "Error reading alienv list status from tempalienvlistOutput.txt"
        isOkToRunNinja=1
    fi

    rm -f "tempalienvlistOutput.txt"
    return $isOkToRunNinja
}

checkdirenv() {
    which cmake &>"tempwhichcmakeOutput.txt"
    if grep -q "alice" "tempwhichcmakeOutput.txt"; then
        echo "direnv is active. You can run ninja :)"
        isOkToRunNinja=0 #true
    else
        echo "direnv is not active! In order to run ninja, exit alienv and run 'cdNinjaBuildDir'!"
        isOkToRunNinja=1
    fi
    rm -f "tempwhichcmakeOutput.txt"
    return $isOkToRunNinja
}

ninjajpsi() {
    if checkalienv && checkdirenv; then
      echo 'Running: time ninja -d explain -j3 PWGJE/Tasks/install'
      time ninja -d explain -j3 PWGJE/Tasks/install
      cd $HOME/alice/O2Physics/PWGJE/Tasks/JPsiWorkDir/
    fi
}

runNinja() {
    local dirToBuild="$1"
    if checkalienv && checkdirenv; then
      echo "Running: time ninja -d explain -j3 ${dirToBuild}install"
      time ninja -d explain -j3 ${dirToBuild}install
      cd $HOME/alice/O2Physics/${dirToBuild}JPsiWorkDir/
    fi
}

cdNinjaBuildDir() {
    cd $NinjaBuildDir
    checkalienv
}

hipe4MLenvEnter() {
    echo "Reminder: you must be in ALICE environment to run hipe4ML!"
    echo "Entering hipe4ML environment ('source ~/alice/Hipe4MLenv/bin/activate')..."
    source ~/alice/Hipe4MLenv/bin/activate
}

