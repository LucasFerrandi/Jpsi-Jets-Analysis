runFitter() {
    tra output/z_Correlations_XiFitterResults.root
    clear
    echo 'Running commmands:'
    echo 'tra output/z_Correlations_XiFitterResults.root'
    echo 'clear'
    echo 'time python tutorial.py configFit_z_Xi.json'
    echo 'rootb output/z_Correlations_XiFitterResults.root'
    echo '====================================================='

    time python tutorial.py configFit_z_Xi.json
    echo '====================================================='
    echo 'Fitter done!'
    rootb output/z_Correlations_XiFitterResults.root
}

