# 25-01-21
# function lssort() {
# for item in *; do
#     if [ -d "$item" ]; then
#         latest=$(find "$item" -type f -exec stat --format='%Y' {} + | sort -n | tail -1)
#         if [ -n "$latest" ]; then
#             latest_time=$(date --date=@$latest '+%b %d %H:%M:%S %Y')
#             echo "$latest_time $item/"
#         fi
#     elif [ -f "$item" ]; then
#         latest_time=$(stat --format='%y' "$item" | awk '{print $1, $2, $3, $4, $5}')
#         echo "$latest_time $item"
#     fi
#     done | sort -nr
# }
function lssort() { #show the (real) modification time of each file of each subdir
for item in *; do
  if [ -d "$item" ]; then
    latest=$(find "$item" -type f -exec stat --format='%Y' {} + | sort -n | tail -1)
    if [ -n "$latest" ]; then
      latest_time=$(date --date=@$latest +%Y-%m-%d\ %H:%M:%S)
      echo "$latest_time $item/"
    fi
  elif [ -f "$item" ]; then
    latest_time=$(stat --format='%y' "$item" | awk '{print $1, $2, $3, $4, $5}')
    echo "$latest_time $item"
  fi
done | sort -nr
}

