#25-05-20:

rootb() {
    local file="${1:-}"
    root -l $file \
        -e 'TBrowser *b = new TBrowser("MyBrowser", nullptr, "ROOT Browser");' \
        -e 'TBrowserImp *imp = b->GetBrowserImp();' \
        -e 'TGMainFrame *mainFrame = imp->GetMainFrame();' \
        -e 'mainFrame->MoveResize(1920, 0, 1545, 1080);'
}

